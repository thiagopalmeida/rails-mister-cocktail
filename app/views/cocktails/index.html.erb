<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/4279099/pexels-photo-4279099.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);">
  <div>
    <div class="d-flex justify-content-center">
      <h1>Cocktails</h1>
    </div>
  </div>
</div>
<div class="background">
  <%= link_to '+ New Cocktails', new_cocktail_path, class:"btn btn-primary", id:"add-button"%>
  <div class="container">
    <div class="">
      <div class="row row-cols-4">
        <% @cocktails.each do |cocktails| %>
        <%= link_to cocktails do %>

        <div class="card-drink">
          <div class="col">
            <div class="card-inside d-flex">
              <div class="photo-card">
                <img class="image-drink p-2 bd-highlight" src="https://images.pexels.com/photos/1189257/pexels-photo-1189257.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940">
              </div>
            </div>
            <p class="card-text"><%= cocktails.name %></p>
          </div>
        </div>

        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

